.container {
  padding: 2rem;
  max-width: 64rem;
  margin: 0 auto;
}

.title {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 1.5rem;
  text-align: center;
}

.counter {
  margin-top: 2rem;
  padding: 1.5rem;
  background-color: #f9fafb;
  border-radius: 0.5rem;
  text-align: center;
}

.value {
  font-size: 1.25rem;
  margin-bottom: 1rem;
}

.button {
  padding: 0.5rem 1.5rem;
  background-color: var(--primary-color);
  color: white;
  border-radius: 0.5rem;
  transition: background-color 0.2s;

  &:hover {
    background-color: darken(var(--primary-color), 10%);
  }
} 